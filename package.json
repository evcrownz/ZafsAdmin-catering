{
  "name": "zafs_admin",
  "version": "1.0.0",
  "description": "Zaf's Kitchen Admin Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "keywords": [
    "electron",
    "admin-dashboard",
    "zafs-kitchen",
    "supabase",
    "qr-login"
  ],
  "author": "Zaf's Kitchen Dev Team",
  "license": "MIT",
  "build": {
    "appId": "com.zafskitchen.admin",
    "productName": "Zaf's Kitchen Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "db.js",
      "renderer/**/*",
      "logo-desktop/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo-desktop/logo.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo-desktop/logo.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo-desktop/logo.png"
    }
  }
}